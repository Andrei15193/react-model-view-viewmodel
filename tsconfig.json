{
    "compilerOptions": {
        "target": "ES5",
        "lib": [
            "ES5",
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2018",
            "ES2019",
            "ES2020",
            "ES2021",
            "ES2022",
            "ES2023"
        ],
        "module": "commonjs",
        "jsx": "react",
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "./lib",
        "allowJs": false,
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "noImplicitThis": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "tests",
        "lib",
        "node_modules"
    ]
}