{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$tsc"
            ],
            "label": "npm: build"
        },
        {
            "dependsOn": "npm: build",
            "type": "npm",
            "script": "test",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
            "label": "npm: test"
        },
        {
            "dependsOn": "npm: build",
            "type": "process",
            "command": "powershell",
            "args": [
                "-Command",
                "Get-ChildItem -File -Recurse -Path \"./lib\" -Filter \"*.js\" | ForEach-Object { (Get-Content $_.FullName) -replace ' = require\\(\"\\.(.*)\"\\);',' = require(\".$1.js\");' | Out-File $_.FullName -Encoding UTF8 }"
            ],
            "problemMatcher": [],
            "label": "prepare: publish"
        }
    ]
}